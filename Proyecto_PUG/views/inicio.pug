doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    title Formulario de Carga de productos
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css")

body
    .container.mt-3
        .jumbotron
            form-group-heading.h1(style='color:blue')
                form(action='/api/productos', method='POST') Carga de Productos
                    div
                    b.h5(style='color:black') Titulo
                    div
                    input.form-control(id="titulo", type='text', name='title')
                    b.h5(style='color:black') Precio
                    div
                    input.form-control(id="precio", type='text', name='price')
                    b.h5(style='color:black') Foto URL
                    div
                    input.form-control(id="Foto URL", type='text', name='thumbnail')
                    button.btn.btn-success.mt-3.mb-5(type='submit') Enviar
                    button.btn.btn-link.mt-3.mb-5(type="button" onclick="window.location.href='/productos'") Listado
